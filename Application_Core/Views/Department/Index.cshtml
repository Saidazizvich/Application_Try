@model IEnumerable<Application_Core.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h1>Index</h1>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<table class="table table-border">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Delete</th>
            <th>Add</th>
            <th>Edit</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmentId</td>
            <td>@item.DepartmentName</td>
            <td>
             <a href="/Department/Delete/@item.DepartmentId" class="btn btn-danger">Delete</a>
            </td>
               <td>
				<a href="/Department/Details/" class="btn btn-success">Details</a>
               </td>
                <td>
				  <a href="/Department/Edit/@item.DepartmentId" class="btn btn-info">Edit</a>
                </td> 
            
        </tr>
    }
</table>
<a href="/Department/AddDepo/" class="btn btn-primary">Create Table</a>